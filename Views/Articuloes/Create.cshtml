@model SGA_Solution.Models.Articulo

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Artículo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Código</label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Artículo</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Precio Unitario</label>
                <span class="input-group-text">$</span>
                <input asp-for="PrecioU" class="form-control" />
                <span asp-validation-for="PrecioU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Caducidad" class="control-label"></label>
                <input asp-for="Caducidad" class="form-control" />
                <span asp-validation-for="Caducidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p><input type="submit" value="Registrar" class="btn btn-danger" /></p>
            </div>
        </form>
    </div>
</div>

<div>
    <p><a asp-action="Index" class="btn btn-danger">Cancelar</a></p>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
