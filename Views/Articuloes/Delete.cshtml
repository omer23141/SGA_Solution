@model SGA_Solution.Models.Articulo

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Articulo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class = "col-sm-2">
            Artículo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            Cantidad en Stock
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stock)
        </dd>
        <dt class = "col-sm-2">
            Precio Unitario
        </dt>
        <dd class = "col-sm-10">
            $@Html.DisplayFor(model => model.PrecioU)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Caducidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Caducidad)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <p><input type="submit" value="Eliminar" class="btn btn-danger" /></p>
        <p><a asp-action="Index" class="btn btn-danger">Cancelar</a></p>
    </form>
</div>
