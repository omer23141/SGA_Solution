@model IEnumerable<SGA_Solution.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-danger">Registrar un nuevo usuario</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Usuario
            </th>
            <th>
                Nombre(s)
            </th>
            <th>
                Apellido Paterno
            </th>
            <th>
                Apellido Materno
            </th>
            
            <th>
                Tipo de Usuario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApellidoP)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApellidoM)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
