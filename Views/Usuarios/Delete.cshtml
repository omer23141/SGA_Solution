@model SGA_Solution.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de que quiere eliminar este usuario?</h3>
<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre de Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario1)
        </dd>
        <dt class="col-sm-2">
            Nombre(s)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            Apellido Paterno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApellidoP)
        </dd>
        <dt class="col-sm-2">
            Apellido Materno
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApellidoM)
        </dd>
        
        <dt class="col-sm-2">
            Tipo de Usuario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <p>
            <input type="submit" value="Borrar" class="btn btn-danger" />
        </p>
        <p>
            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
            </p>
    </form>
</div>
